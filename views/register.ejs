<% include ./partials/header.ejs %>

 
<div  class="w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div class="w-[32vw]  bg-white px-20 py-10 rounded-[30px]">
    <div class="logo w-10 h-10 rounded-full bg-sky-700 ml-40">
      <img class="w-full h-full object-cover" src="https://static-00.iconduck.com/assets.00/pinterest-icon-512x511-e2czduq2.png" alt="">
    </div>
    <h1 class="text-3xl leading-none text-center font-semibold text-zinc-700 capitalize tracking-tighter">Create New account</h1>
    <form action="/register" method="post">
      <input class="border-2 block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
      <input class="border-2 block mt-2 w-full px-3 py-2" type="text" name="name" placeholder="fullname">
      <input class="border-2 block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
      <input class="border-2 block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="Email">
      <input class="border-2 block mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="contact">
      <input class="border-2 block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create New Account">
      <p class="text-xs font-semibold text-zinc-700 mt-10 w-3/3 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service; you've read our Privacy Policy; Opens a new tab. Notice at collection; Opens a new tab</p>
    </form>
    <a class="inline-block mt-7 text-sm font-semibold text-center w-full" href="/relogin">Login Existing Account</a>
  </div>
</div>


