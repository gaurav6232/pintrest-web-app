<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-8">
    <div class="cards flex flex-wrap gap-10 shrink-0">
        <% posts.forEach(function(elem) { %>
            <div class="card w-56 h-52 object-cover text-white rounded-lg overflow-hidden relative">
                <% if (elem.video) { %>
                    <video class="w-full h-full object-cover " controls>
                        <source src="/images/uploads/<%= elem.video %>" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                <% } else { %>
                    <div class="w-full h-full object-cover rounded-lg overflow-hidden leading-3">
                        <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                    </div>
                <% } %>
                <h5><%= elem.title %></h5>
                <% if (elem.user && elem.user.username) { %>
                    <h6 class="text-xs font-semibold opacity-50"><%= elem.user.username %></h6>
                <% } else { %>
                    <h6 class="text-xs font-semibold opacity-50">Unknown</h6>
                <% } %>
            </div>
        <% }) %>
    </div>
</div>

<% include ./partials/footer.ejs %>
